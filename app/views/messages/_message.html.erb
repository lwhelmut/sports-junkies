<p id="message-<%= message.id %>">
  <% if message.user.id == current_user.id %>
    <div class="message mb-2 me">
      <div class="content-container">
        <div class="content">
          <%= message.content %>
        </div>
        <div class="author">
          <span class="activity-status user-<%= message.user.id %>-status">
            ・
          </span>
          <%= message.user.name %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="message mb-2">
      <div class="content-container">
        <div class="content">
          <%= message.content %>
        </div>
        <div class="author">
          <span class="activity-status user-<%= message.user.id %>-status">
            ・
          </span>
          <%= message.user.name %>
        </div>
      </div>
    </div>
  <% end %>
</p>