<div class="row">
  <div class="col-md-1">
  </div>
  <div class="col-md-8">
    <%= form_with(model: post, local: true) do |form| %>
      <%= render "shared/error_messages", model: post %> 
      
      <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title, class:"form-control", id: 'title'%>
      </div>

      <div class="field">
        <%= form.label :concept %>
        <%= form.rich_text_area :concept, class:"form-control", id: 'concept'%>
      </div>

      <div class="form-group">
        <%= form.label :image %>
        <%= form.file_field :image, class: "form-control-file", id: 'image' %>
      </div>

      <div class="form-group">
        <%= form.label :tag_list %>
        <div class="input-form">
          <%= form.text_field :tag_list, value: @post.tag_list.join(','), class: "ui-widget-content ui-autocomplete-input", name: "post[tag_list]", id: "post_tag_list", placeholder: "You can add 10 more tags"  %>
        </div>
      </div>

      <div class="sell-btn-contents">
        <%= form.submit "Save", class:"btn btn-primary" %>
      </div>

    <% end %>
  </div>
  <div class="col-md-2">
  </div>
</div>